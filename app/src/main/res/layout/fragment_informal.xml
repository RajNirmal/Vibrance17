
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableLayout
        android:id="@+id/threeByThreeTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3,4,5"
        android:padding="10dp"
        >

        <TableRow android:id="@+id/tableRow1"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="10dp"

            >

                <LinearLayout
                    android:id="@+id/mygallery1"
                    android:layout_width="wrap_content"
                    android:weightSum="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/button1"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ff"

                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="match_parent"
                        android:background="#000000"/>

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:background="@drawable/meh"

                        />

                </LinearLayout>


        </TableRow>
        <TableRow android:id="@+id/tableRow2"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="10dp"
            >

                <LinearLayout
                    android:id="@+id/mygallery2"
                    android:layout_width="wrap_content"
                    android:weightSum="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/button3"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pai"

                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="match_parent"
                        android:background="#000000"/>

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pgo"



                        />
                </LinearLayout>

        </TableRow>
        <TableRow android:id="@+id/tableRow3"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="3"
                  android:layout_marginBottom="10dp"
            >

                <LinearLayout
                    android:id="@+id/mygallery3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/button5"
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rang"

                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="match_parent"
                        android:background="#000000"/>


                </LinearLayout>


        </TableRow>

    </TableLayout>

</ScrollView>